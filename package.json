    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.12.12",
    "@types/obsidian-typings": "npm:obsidian-typings@^1.1.3",
    "builtin-modules": "^3.3.0",
